# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET      /index                controllers.Application.books()

GET     /books                  controllers.Application.books()
POST    /books                  controllers.Application.newBook()
POST    /books/:id/delete       controllers.Application.deleteBook(id: Long)
# addAutor
GET     /books/addInstrumento        controllers.Application.addInstrumento(livro:Long, autor:String)